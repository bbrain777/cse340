<!doctype html>
<html lang="en">
  <head>
    <%- include("../partials/head", { title }) %>
  </head>
  <body>
    <%- include("../partials/header") %>

    <main id="add-inventory-view" class="site-main">
      <div class="container">
        <h1><%= title %></h1>

        <% if (locals.notice) { %>
          <div class="notice"><%= notice %></div>
        <% } %>

        <% if (errors && errors.length > 0) { %>
          <div class="errors">
            <p>Please fix the following errors:</p>
            <ul>
              <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
              <% }) %>
            </ul>
          </div>
        <% } %>

        <form action="/inv/add" method="post" novalidate>
          <div class="form-field">
            <label for="classificationList">Classification</label>
            <%- classificationSelect %>
          </div>

          <div class="form-field">
            <label for="inv_make">Make</label>
            <input
              type="text"
              id="inv_make"
              name="inv_make"
              required
              minlength="3"
              value="<%= inv_make || '' %>"
            />
          </div>

          <div class="form-field">
            <label for="inv_model">Model</label>
            <input
              type="text"
              id="inv_model"
              name="inv_model"
              required
              minlength="3"
              value="<%= inv_model || '' %>"
            />
          </div>

          <div class="form-field">
            <label for="inv_year">Year</label>
            <input
              type="number"
              id="inv_year"
              name="inv_year"
              required
              min="1900"
              max="2100"
              value="<%= inv_year || '' %>"
            />
          </div>

          <div class="form-field">
            <label for="inv_price">Price</label>
            <input
              type="number"
              id="inv_price"
              name="inv_price"
              required
              step="0.01"
              min="0"
              value="<%= inv_price || '' %>"
            />
          </div>

          <div class="form-field">
            <label for="inv_miles">Miles</label>
            <input
              type="number"
              id="inv_miles"
              name="inv_miles"
              required
              min="0"
              value="<%= inv_miles || '' %>"
            />
          </div>

          <div class="form-field">
            <label for="inv_color">Color</label>
            <input
              type="text"
              id="inv_color"
              name="inv_color"
              required
              minlength="3"
              value="<%= inv_color || '' %>"
            />
          </div>

          <div class="form-field">
            <label for="inv_image">Image Path</label>
            <input
              type="text"
              id="inv_image"
              name="inv_image"
              required
              value="<%= inv_image || '/images/vehicles/no-image.png' %>"
            />
          </div>

          <div class="form-field">
            <label for="inv_thumbnail">Thumbnail Path</label>
            <input
              type="text"
              id="inv_thumbnail"
              name="inv_thumbnail"
              required
              value="<%= inv_thumbnail || '/images/vehicles/no-image-tn.png' %>"
            />
          </div>

          <div class="form-field">
            <label for="inv_description">Description</label>
            <textarea
              id="inv_description"
              name="inv_description"
              rows="4"
              required
            ><%= inv_description || '' %></textarea>
          </div>

          <button type="submit">Add Vehicle</button>
        </form>
      </div>
    </main>

    <%- include("../partials/footer") %>
  </body>
</html>
