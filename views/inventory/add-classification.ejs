<!doctype html>
<html lang="en">
  <head>
    <%- include("../partials/head", { title }) %>
  </head>
  <body>
    <%- include("../partials/header") %>

    <main id="add-classification-view" class="site-main">
      <div class="container">
        <h1><%= title %></h1>

        <% if (locals.notice) { %>
          <div class="notice"><%= notice %></div>
        <% } %>

        <% if (errors && errors.length > 0) { %>
          <div class="errors">
            <p>Please fix the following errors:</p>
            <ul>
              <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
              <% }) %>
            </ul>
          </div>
        <% } %>

        <p>The classification name cannot contain spaces or special characters.</p>

        <form action="/inv/add-classification" method="post" novalidate>
          <div class="form-field">
            <label for="classification_name">Classification Name</label>
            <input
              type="text"
              id="classification_name"
              name="classification_name"
              required
              pattern="^[A-Za-z0-9]+$"
              title="Only letters and numbers are allowed. No spaces or special characters."
              value="<%= classification_name || '' %>"
            />
          </div>

          <button type="submit">Add Classification</button>
        </form>
      </div>
    </main>

    <%- include("../partials/footer") %>
  </body>
</html>
