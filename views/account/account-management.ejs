<%- include("../partials/head") %>
<%- include("../partials/header") %>

<main class="account-management">
  <h1>Account Management</h1>

  <% if (message && message.length > 0) { %>
    <div class="notice"><%= message %></div>
  <% } %>

  <% if (accountData) { %>
    <!-- Greeting based on logged-in user -->
    <h2>Welcome <%= accountData.account_firstname %></h2>

    <p>
      You are logged in as
      <strong><%= accountData.account_type %></strong>
      (<%= accountData.account_email %>).
    </p>

    <!-- Links visible to ALL account types -->
    <ul class="account-links">
      <li>
        <a href="/account/update/<%= accountData.account_id %>">
          Update Account Information
        </a>
      </li>
    </ul>

    <!-- Inventory Management: ONLY for Employee/Admin -->
    <% if (
      accountData.account_type === "Employee" ||
      accountData.account_type === "Admin"
    ) { %>
      <h3>Inventory Management</h3>
      <p>
        <a href="/inv/" title="Go to Inventory Management">
          Manage Inventory
        </a>
      </p>
    <% } %>
  <% } %>
</main>

<%- include("../partials/footer") %>
